{
    "manifest_version": 2,
    "name": "Quick Note",
    "version": "1.0",
    "description": "A browser extension that allows users to quickly jot down notes while browsing the web.",
    "permissions": [
      "tabs", "activeTab"
    ],
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon-128.png"
      }
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon-128.png"
    }
  }
  